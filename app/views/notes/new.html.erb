<h1>New Note</h1>

<%= form_for [@note.project, @note] do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit "Save Note", class: "btn btn-success" %>
  </div>
<% end %>