  <div class="container">
    <div class="col-sm-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1><%= @project.title %></h1>
          </div>
        <div class="panel-body">
          <p>Notes:</p>
          <% @notes.each do |note| %>
            <p><%= link_to note.title, edit_project_note_path(@project, note) %></p>
          <% end %>
        </div>
      </div>
      <%= link_to "Delete Project", user_project_path, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>

      <h1>New Note</h1>

      <%= form_for [@project, @note] do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 10, class: "form-control" %>
        </div>

        <div class="action">
          <%= f.submit "Save Note", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>
